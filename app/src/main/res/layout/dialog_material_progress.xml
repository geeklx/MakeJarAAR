<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_material_progress_bg">

    <com.example.shining.makejaraar.widget.loading.MaterialProgress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:barColor="@color/blue_62abf2"
        wheel:progressIndeterminate="true" />

    <TextView
        android:id="@+id/tv_content_progress"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_wheel"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal"
        android:text="测试" />
</RelativeLayout>
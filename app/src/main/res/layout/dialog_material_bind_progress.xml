<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x600"
    android:layout_height="@dimen/y550"
    android:background="@drawable/dialog_material_progress_bg"
   >

    <com.example.shining.makejaraar.widget.loading.MaterialProgress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y250"
        wheel:barColor="@color/green_8BC638"
        wheel:circleRadius="@dimen/x140"
        wheel:progressIndeterminate="true"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定中"
        android:id="@+id/textView50"
        android:textSize="12sp"
        android:layout_below="@+id/progress_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y200"
        android:id="@+id/imageView15"
        android:src="@drawable/bear_round"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请耐心等待"
        android:id="@+id/textView48"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView50"
        android:layout_centerHorizontal="true" />

</RelativeLayout>